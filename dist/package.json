{
    "name": "@aloridal/cli",
    "version": "0.1.0",
    "description": "Aloridal command line tools",
    "main": "src/index.js",
    "bin": {
        "alo": "./dist/bin/index.js"
    },
    "man": "./man/doc.1",
    "engines": {
        "node": ">=10.0.0"
    },
    "scripts": {
        "build": "tsc",
        "prebuild": "rimraf dist types",
        "lint": "tslint -p tsconfig.json && eslint test",
        "format": "prettier --config .prettierrc.js --write {src,bin,test}/**/*.{js,ts}",
        "inspect": "jsinspect src bin",
        "test": "tsc --outDir test_cache && nyc ava -v",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "report": "nyc report --reporter=html",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ta7sudan/aloridal-cli.git"
    },
    "keywords": [
        "aloridal",
        "cli"
    ],
    "author": "ta7sudan",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/ta7sudan/aloridal-cli/issues"
    },
    "homepage": "https://github.com/ta7sudan/aloridal-cli#readme",
    "files": [
        "dist",
        "man",
        "docs"
    ],
    "lint-staged": {
        "linters": {
            "*.js": [
                "eslint"
            ],
            "*.ts": [
                "tslint"
            ]
        },
        "ignore": [
            "**/*.d.ts"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run build && git add ."
        }
    },
    "ava": {
        "cache": true,
        "babel": false
    },
    "nyc": {
        "cache": true,
        "include": [
            "test_cache/**/*.js"
        ]
    },
    "devDependencies": {
        "@types/execa": "^0.9.0",
        "@types/figlet": "^1.2.0",
        "@types/figures": "^2.0.0",
        "@types/node": "^11.13.0",
        "@types/semver": "^6.0.0",
        "@types/yargs": "^12.0.11",
        "ava": "^1.4.1",
        "codecov": "^3.3.0",
        "conventional-changelog-cli": "^2.0.12",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^5.16.0",
        "eslint-plugin-prettier": "^3.0.1",
        "husky": "^1.3.1",
        "jsinspect": "^0.12.7",
        "lint-staged": "^8.1.5",
        "nyc": "^13.3.0",
        "prettier": "^1.16.4",
        "rimraf": "^2.6.3",
        "tslint": "^5.15.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.4.2"
    },
    "dependencies": {
        "chalk": "^2.4.2",
        "execa": "^1.0.0",
        "figlet": "^1.2.1",
        "figures": "^2.0.0",
        "ora": "^3.4.0",
        "semver": "^6.0.0",
        "tslib": "^1.9.3",
        "yargonaut": "^1.1.4",
        "yargs": "^13.0.0-candidate.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
