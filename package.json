{
  "name": "@aloridal/cli",
  "version": "0.1.0",
  "description": "Aloridal command tool",
  "main": "src/index.js",
  "bin": {
    "alo": "./bin/index.js"
  },
  "man": "./man/doc.1",
  "engines": {
    "node": ">=10.9.0"
  },
  "scripts": {
    "lint": "eslint src bin test",
    "format": "prettier --config .prettierrc.js --write {src,bin,test}/**/*.js",
    "inspect": "jsinspect src bin",
    "test": "nyc ava -v",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "report": "nyc report --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ta7sudan/aloridal-cli.git"
  },
  "keywords": [
    "aloridal",
    "cli"
  ],
  "author": "ta7sudan",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ta7sudan/aloridal-cli/issues"
  },
  "homepage": "https://github.com/ta7sudan/aloridal-cli#readme",
  "files": [
    "bin",
    "src",
    "man",
    "docs"
  ],
  "lint-staged": {
    "*.js": ["eslint"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "ava": {
    "cache": true,
    "babel": false
  },
  "nyc": {
    "cache": true,
    "include": [
      "src/**/*.js",
      "bin/**/*.js"
    ]
  },
  "devDependencies": { 
    "ava": "^1.2.1",
    "codecov": "^3.2.0",
    "conventional-changelog-cli": "^2.0.12",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jsinspect": "^0.12.7",
    "lint-staged": "^8.1.4",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "execa": "^1.0.0",
    "figlet": "^1.2.0",
		"figures": "^2.0.0",
    "ora": "^3.0.0",
    "semver": "^5.5.1",
    "yargonaut": "^1.1.3",
    "yargs": "^12.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
